<div class="d-flex flex-column mt-3 justify-content-center" style="height: @CalculateDivHeight();">
    @foreach (var n in Notes)
    {
        <div class="my-3 text-center">
            <span class="parallax-caption vw125">@n</span>
        </div>
    }
</div>

