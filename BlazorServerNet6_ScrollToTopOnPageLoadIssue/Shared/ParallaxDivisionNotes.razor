@code {
    [Parameter] public string[] Notes { get; set; } = new string[0];

    private string CalculateDivHeight()
    {

        if (Notes.GetLength(0) > 3)
        {
            return "450px";
        }
        else
        {
            return "300px";
        }
    }
}
